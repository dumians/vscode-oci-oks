{
  "name": "vscode-oci-oks-tools",
  "displayName": "oci-oks Kubernetes Service",
  "publisher": "Oracle",
  "repository": {
    "type": "git",
    "url": "https://github.com/dumians/vscode-oci-oks-tools"
  },
  "description": "Display Oracle Cloud Infrastructure Kubernetes Services within VS Code",
  "version": "0.10.0",
  "engines": {
    "vscode": "^1.34.0"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "categories": [
    "Other"
  ],
  "keywords": [
    "kubernetes",
    "oci-oks",
    "kubernetes-extension-cloud-provider"
  ],
  "activationEvents": [
    "onView:kubernetes.cloudExplorer"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "title": "Oracle Cloud Kubernetes Tools",
      "type": "object",
      "properties": {
        "vscode-oci-oks-tools": {
          "type": "object",
          "markdownDescription": "`Oracle Cloud Kubernetes` configuration",
          "default": {
            "vscode-light-theme": true,
            "landscapes": []
          },
          "properties": {
            "vscode-light-theme": {
              "type": "boolean",
              "markdownDescription": "Set this value to `false` if you are using a vscode dark theme",
              "default": true
            },
            "landscapes": {
              "type": "array",
              "description": "Oracle Cloud Infrastructure Landscapes",
              "default": [
                {
                  "name": "landscape-xyz",
                  "kubeconfigPath": "",
                  "dashboardUrl": "https://"
                }
              ],
              "items": {
                "type": "object",
                "description": "Garden Landscape",
                "default": {
                  "name": "landscape-xyz",
                  "kubeconfigPath": "",
                  "dashboardUrl": "https://"
                },
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the Oracle Cloud Infrastructure cluster",
                    "default": "landscape-xyz"
                  },
                  "gardenName": {
                    "type": "string",
                    "description": "Optional Name of the corresponding (gardenctl) garden. Default: Name of the landscape"
                  },
                  "kubeconfigPath": {
                    "type": "string",
                    "description": "Path to the kubeconfig of the (virtual) OKS cluster"
                  },
                  "dashboardUrl": {
                    "type": "string",
                    "description": "oci-oks Dashboard URL",
                    "default": "https://"
                  },
                  "projects": {
                    "type": "array",
                    "description": "Optional list of projects (names) to be shown. However, you should specify this list if you do not have operator rights on the garden cluster or if you want to see only those projects.",
                    "optional": true,
                    "items": {
                      "type": "string",
                      "description": "Project name"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "vs-oci-oks.showInDashboard",
        "title": "Show In Dashboard",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.createShoot",
        "title": "Create Shoot Cluster",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.createProject",
        "title": "Create Project",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.register",
        "title": "Landscape Admin - Register",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.unregister",
        "title": "Landscape Admin - Unregister",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.target",
        "title": "Target",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.shell",
        "title": "Shell..",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.openExtensionSettings",
        "title": "Open Extension Settings",
        "category": "oci-oks"
      },
      {
        "command": "vs-oci-oks.list",
        "title": "List..",
        "category": "oci-oks"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "vs-oci-oks.showInDashboard",
          "when": "viewItem =~ /oci-oks\\.shoot/i"
        },
        {
          "command": "vs-oci-oks.showInDashboard",
          "when": "viewItem =~ /oci-oks\\.folder\\.shoot/i"
        },
        {
          "command": "vs-oci-oks.showInDashboard",
          "when": "viewItem =~ /oci-oks\\.project/i"
        },
        {
          "command": "vs-oci-oks.showInDashboard",
          "when": "viewItem =~ /oci-oks\\.landscape/i"
        },
        {
          "command": "vs-oci-oks.register",
          "when": "viewItem =~ /oci-oks\\.landscape/i"
        },
        {
          "command": "vs-oci-oks.unregister",
          "when": "viewItem =~ /oci-oks\\.landscape/i"
        },
        {
          "command": "vs-oci-oks.register",
          "when": "viewItem =~ /kubernetes\\.cloudExplorer\\.cloud\\.oci-oks/i"
        },
        {
          "command": "vs-oci-oks.unregister",
          "when": "viewItem =~ /kubernetes\\.cloudExplorer\\.cloud\\.oci-oks/i"
        },
        {
          "command": "vs-oci-oks.openExtensionSettings",
          "when": "viewItem =~ /kubernetes\\.cloudExplorer\\.cloud\\.oci-oks/i"
        },
        {
          "command": "vs-oci-oks.createShoot",
          "when": "viewItem =~ /oci-oks\\.folder\\.shoot/i"
        },
        {
          "command": "vs-oci-oks.createProject",
          "when": "viewItem =~ /oci-oks\\.folder.project/i"
        },
        {
          "command": "vs-oci-oks.target",
          "when": "viewItem =~ /oci-oks\\.targetable/i"
        },
        {
          "command": "vs-oci-oks.shell",
          "when": "viewItem =~ /oci-oks\\.shellable/i"
        },
        {
          "command": "vs-oci-oks.openExtensionSettings",
          "when": "viewItem =~ /oci-oks\\.configurable/i"
        },
        {
          "command": "vs-oci-oks.list",
          "when": "viewItem =~ /oci-oks\\.listable/i"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint --ext .js src"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.14",
    "shell-escape": "^0.2.0",
    "shelljs-exec-proxy": "^0.1.1",
    "tmp": "^0.1.0",
    "url-join": "^4.0.0",
    "vscode-kubernetes-tools-api": "^1.0.0"
  },
  "icon": "src/assets/oci-oks-logo-256.png"
}
